{% extends 'base.html.twig' %}
{% block body %}

    <div class="background-image position-relative">
        <img class="img-fluid mobile-img"
             src="{{ asset('build/images/background2.jpg') }}"
             alt="background">
        <h1 class="sentence"> snowtricks</h1>
    </div>
    <div class="container">
        <div class="row" id="trickList">
            {% for trick in items %}
                <div class="col-sm-12 col-md-3">
                    <div class="card list">
                        <img src="https://picsum.photos/200/100?random=1">
                        <div class="card-body">
                            <div class="d-flex flex-row justify-content-between align-items-center">
                                <h5 class="card-title">
                                    <a href="#">
                                        {{ trick.name }}
                                    </a>
                                </h5>
                                <span>
                                    <i class="fa-solid fa-pencil fa-sm me-4"></i>
                                    <i class="fa-solid fa-trash-can fa-sm text-danger"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="row mt-4">
            <div class="d-flex justify-content-center">
                <a id="loadMoreBTN">
                    <button class="btn btn-primary ">
                        <i class="fa-solid fa-spinner me-2"></i>
                       <span class="text-lowercase small"> Load more</span>
                    </button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
